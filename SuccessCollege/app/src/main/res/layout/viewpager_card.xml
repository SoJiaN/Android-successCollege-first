<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/total_viewpager_card_lila"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/part_viewpager_card_lila"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginRight="@dimen/sw600_50dp"
            android:layout_marginLeft="@dimen/sw600_50dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sw600_380dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="5.0"
                android:background="@mipmap/left_ll_tv"
                android:layout_width="@dimen/sw600_0dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/textView5"
                    android:layout_weight="1.0" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView4"
                    android:layout_weight="0.5" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView3"
                    android:layout_weight="0.3" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/textView2" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/black"
                    android:layout_weight="3.0"
                    android:id="@+id/textView" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="3"
                android:background="@color/white"
                android:layout_width="@dimen/sw600_0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/sw600_180dp"
                    android:layout_height="@dimen/sw600_0dp"
                    android:layout_weight="1"
                    android:id="@+id/imageView3" />

                <ImageView
                    android:layout_width="@dimen/sw600_180dp"
                    android:layout_height="@dimen/sw600_0dp"
                    android:layout_weight="1"
                    android:id="@+id/imageView2" />

                <ImageView
                    android:layout_width="@dimen/sw600_180dp"
                    android:layout_height="@dimen/sw600_0dp"
                    android:layout_weight="1"
                    android:id="@+id/imageView" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/viewpager_reflct_imagev"
            android:layout_marginLeft="@dimen/sw600_50dp"
            android:layout_marginRight="@dimen/sw600_50dp"
            android:layout_marginTop="@dimen/sw600_10dp"

            android:layout_width="match_parent"
            android:layout_height="@dimen/sw600_200dp" />

</LinearLayout>